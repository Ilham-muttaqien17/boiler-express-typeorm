{
  "name": "boilerplate_express_typeorm",
  "version": "1.0.0",
  "description": "Boilerplate for Express with TypeORM",
  "main": "main.ts",
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "dev": "tsx watch main.ts",
    "build": "rimraf dist && tsc",
    "start": "NODE_ENV=production node -r module-alias/register ./dist/main.js",
    "lint": "eslint . --ext=.ts",
    "commitlint": "commitlint --edit",
    "entity:create": "ts-node ./node_modules/.bin/typeorm entity:create",
    "migration:create": "ts-node ./node_modules/.bin/typeorm migration:create",
    "migration:generate": "ts-node ./node_modules/.bin/typeorm migration:generate --pretty -d ./src/db/data-source.ts",
    "migration:run": "ts-node ./node_modules/.bin/typeorm migration:run -d ./src/db/data-source.ts",
    "migration:revert": "ts-node ./node_modules/.bin/typeorm migration:revert -d ./src/db/data-source.ts",
    "migration:show": "ts-node ./node_modules/.bin/typeorm migration:show -d ./src/db/data-source.ts",
    "seed:create": "ts-node ./node_modules/.bin/typeorm migration:create",
    "seed:run": "ts-node ./node_modules/.bin/typeorm migration:run -d ./src/db/data-source-seeder.ts",
    "seed:revert": "ts-node ./node_modules/.bin/typeorm migration:revert -d ./src/db/data-source-seeder.ts"
  },
  "_moduleAliases": {
    "@src": "dist/src",
    "@test": "dist/test",
    "@config": "dist/config",
    "@@": "./"
  },
  "keywords": [
    "express",
    "typeorm",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.7",
    "pino": "^9.1.0",
    "pino-pretty": "^11.0.0",
    "rate-limiter-flexible": "^5.0.3",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20",
    "xss": "^1.0.15",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jorgebodega/typeorm-seeding": "^7.0.0",
    "@stylistic/eslint-plugin-ts": "^1.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "~8.53.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.7",
    "simple-git-hooks": "^2.11.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "simple-git-hooks": {
    "commit-msg": "npx commitlint --edit $1",
    "pre-commit": "npx lint-staged"
  }
}
